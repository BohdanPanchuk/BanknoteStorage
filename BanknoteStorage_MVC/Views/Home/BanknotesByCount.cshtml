@model IEnumerable<BanknoteStorage_MVC.Models.Banknote>

@{
    ViewBag.Title = "Banknotes by count";
}

@using (Html.BeginForm())
{
    <div>
        <h2>Banknotes by count</h2>
    </div>

    <div>
        <table>
            <tr style="background-color: #FFFACD; text-align:center">
                <th style="text-align:left">
                    Value
                </th>
                <th style="text-align:left">
                    Count
                </th>
                <th style="text-align:left">
                    Manage
                </th>
            </tr>

            @{
                foreach (var item in Model)
                {
                    <tr style="background-color: #FFFFF0">
                        <td>
                            @item.Value
                        </td>
                        <td>
                            @item.Count
                        </td>

                        <td>
                            @Html.ActionLink("Edit", "EditBanknote", new { id = @item.Id }) / @Html.ActionLink("Delete", "DeleteBanknote", new { id = @item.Id })
                        </td>
                    </tr>
                }
            }
        </table>
        @Html.ActionLink("Back to Main page", "Index")
    </div>
}